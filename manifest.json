{
  "manifest_version": 2,
  "name": "App-Nag Blocker",
  "version": "1.0.0",
  "description": "Automatically dismisses app-nag prompts on websites",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "storage",
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_popup": "src/popup/popup.html",
    "default_title": "App-Nag Blocker"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "app-nag-blocker@example.com"
    }
  }
}
